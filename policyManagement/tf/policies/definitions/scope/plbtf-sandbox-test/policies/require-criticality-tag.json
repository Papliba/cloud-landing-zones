{
  
  
  

  "name": "require-criticality-tag",

  "properties": {
    "displayName": "Require Criticality Tag on All Resources",
    "description": "This policy requires that all resources have a criticality tag (low/medium/high/critical) for incident response prioritization and SLA management.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      },
      "allowedCriticality": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Criticality Levels",
          "description": "Valid criticality level values"
        },
        "defaultValue": ["low", "medium", "high", "critical"]
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            
            "field": "tags['criticality']",
            "exists": false
          },
          {
            
            "field": "tags['criticality']",
            "notIn": "[parameters('allowedCriticality')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
