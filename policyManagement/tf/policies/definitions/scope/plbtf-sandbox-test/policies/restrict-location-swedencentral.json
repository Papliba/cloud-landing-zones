{
  "name": "restrict-location-swedencentral",
  "properties": {
    "displayName": "Restrict Resource Location to Sweden Central",
    "description": "This policy restricts all Azure resources to be deployed only in the Sweden Central region.",
    "mode": "Indexed",
    "metadata": {
      "category": "General",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Deny"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "location",
            "notEquals": "global"
          },
          {
            "field": "location",
            "notEquals": "swedencentral"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
