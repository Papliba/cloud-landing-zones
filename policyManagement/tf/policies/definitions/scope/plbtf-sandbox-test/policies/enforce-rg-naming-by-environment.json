{
  
  
  

  "name": "enforce-rg-naming-by-environment",

  "properties": {
    "displayName": "Enforce Resource Group Naming Convention by Environment",
    "description": "This policy enforces naming conventions for resource groups based on environment (dev, test, prod) to ensure organizational consistency.",

    
    "mode": "All",

    "metadata": {
      "category": "Naming Convention",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Deny", "Audit", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            
            "field": "type",
            "equals": "Microsoft.Resources/resourceGroups"
          },
          {
            
            "not": {
              "field": "name",
              "match": "^plb-rg-(dev|test|prod)-[a-z0-9]+-[a-z]+-[0-9]{3}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
