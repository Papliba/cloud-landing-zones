{
  
  
  

  "name": "enforce-certificate-renewal",

  "properties": {
    "displayName": "Enforce Certificate Renewal Before Expiry",
    "description": "This policy audits certificates in Key Vault that are approaching expiration, ensuring timely renewal to prevent service disruptions.",

    "mode": "All",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      },
      "daysBeforeExpiry": {
        "type": "Integer",
        "metadata": {
          "displayName": "Days Before Expiry",
          "description": "Number of days before expiry to trigger audit"
        },
        "defaultValue": 30
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.KeyVault/vaults"
          },
          {
            "value": "[parameters('daysBeforeExpiry')]",
            "greater": 0
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
