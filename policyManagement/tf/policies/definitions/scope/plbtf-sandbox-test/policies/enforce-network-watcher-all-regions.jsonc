{
  // Azure Policy Definition: Enforce Network Watcher in All Regions
  // Purpose: Ensure Network Watcher is deployed in every region where resources exist
  // This enables network monitoring, diagnostics, and troubleshooting capabilities

  "name": "enforce-network-watcher-all-regions",

  "properties": {
    "displayName": "Enforce Network Watcher in All Active Regions",
    "description": "This policy ensures that Network Watcher is enabled in all Azure regions where the organization deploys resources, enabling comprehensive network monitoring.",

    "mode": "All",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Resources/subscriptions"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          // Check for Network Watcher resource
          "type": "Microsoft.Network/networkWatchers"
        }
      }
    }
  }
}
