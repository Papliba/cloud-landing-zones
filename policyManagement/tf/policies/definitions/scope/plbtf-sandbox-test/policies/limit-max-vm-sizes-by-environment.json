{
  "name": "limit-max-vm-sizes-by-environment",

  "properties": {
    "displayName": "Limit Maximum VM Sizes by Environment",
    "description": "This policy restricts the maximum VM size that can be deployed in each environment, ensuring cost control while allowing appropriate sizing.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "devMaxSize": {
        "type": "String",
        "metadata": {
          "displayName": "Max Size for Dev",
          "description": "Maximum VM size allowed in dev environment"
        },
        "defaultValue": "Standard_D4s_v3"
      },
      "testMaxSize": {
        "type": "String",
        "metadata": {
          "displayName": "Max Size for Test",
          "description": "Maximum VM size allowed in test environment"
        },
        "defaultValue": "Standard_D8s_v3"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "anyOf": [
              {
                "allOf": [
                  {
                    "field": "tags['environment']",
                    "equals": "dev"
                  },
                  {
                    "field": "Microsoft.Compute/virtualMachines/sku.name",
                    "notEquals": "[parameters('devMaxSize')]"
                  }
                ]
              },
              {
                "allOf": [
                  {
                    "field": "tags['environment']",
                    "equals": "test"
                  },
                  {
                    "field": "Microsoft.Compute/virtualMachines/sku.name",
                    "notEquals": "[parameters('testMaxSize')]"
                  }
                ]
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
