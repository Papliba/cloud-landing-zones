{
  "name": "enforce-sql-auditing",

  "properties": {
    "displayName": "Enforce SQL Server Auditing",
    "description": "This policy requires that auditing is enabled on all Azure SQL servers to track database activities and events for security and compliance.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Sql/servers"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Sql/servers/auditingSettings",
          "existenceCondition": {
            "field": "Microsoft.Sql/servers/auditingSettings/state",
            "equals": "Enabled"
          }
        }
      }
    }
  }
}
