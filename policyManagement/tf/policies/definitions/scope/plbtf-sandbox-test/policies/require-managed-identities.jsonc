{
  // Azure Policy Definition: Require Managed Identities Instead of Connection Strings
  // Purpose: Enforce use of managed identities for secure authentication without credentials
  // This eliminates the need to store connection strings and passwords in code or configuration

  "name": "require-managed-identities",

  "properties": {
    "displayName": "Require Managed Identities for App Services",
    "description": "This policy requires that App Services and Function Apps use managed identities for authentication instead of connection strings, improving security posture.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target App Services and Function Apps
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            // Check if managed identity is not configured
            "field": "identity.type",
            "notIn": ["SystemAssigned", "UserAssigned", "SystemAssigned, UserAssigned"]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
