{
  // Azure Policy Definition: Require Private Link for PaaS Services
  // Purpose: Enforce private connectivity for Azure PaaS services
  // This eliminates public internet exposure for sensitive services

  "name": "require-private-link-paas",

  "properties": {
    "displayName": "Require Private Link for Azure PaaS Services",
    "description": "This policy requires that Azure PaaS services use Private Link for connectivity, eliminating public internet exposure and improving security.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target PaaS services that support Private Link
            "field": "type",
            "in": [
              "Microsoft.Sql/servers",
              "Microsoft.Storage/storageAccounts",
              "Microsoft.KeyVault/vaults",
              "Microsoft.CognitiveServices/accounts"
            ]
          },
          {
            // Production environment
            "field": "tags['environment']",
            "equals": "prod"
          },
          {
            // Check for private endpoint configuration
            "count": {
              "field": "Microsoft.Storage/storageAccounts/privateEndpointConnections[*]",
              "where": {
                "field": "Microsoft.Storage/storageAccounts/privateEndpointConnections[*].privateLinkServiceConnectionState.status",
                "equals": "Approved"
              }
            },
            "less": 1
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
