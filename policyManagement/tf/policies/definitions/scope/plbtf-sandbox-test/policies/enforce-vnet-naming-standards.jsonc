{
  // Azure Policy Definition: Enforce Virtual Network Naming Standards
  // Purpose: Standardize VNet names across the organization
  // Pattern: plb-vnet-<environment>-<purpose>-<region>-<sequence>

  "name": "enforce-vnet-naming-standards",

  "properties": {
    "displayName": "Enforce Virtual Network Naming Standards",
    "description": "This policy enforces a standardized naming convention for virtual networks including organization prefix, environment, purpose, region, and sequence number.",

    "mode": "All",

    "metadata": {
      "category": "Naming Convention",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Deny", "Audit", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target virtual networks
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            // Validate naming pattern
            "not": {
              "field": "name",
              "match": "^plb-vnet-(dev|test|prod)-[a-z0-9]+-[a-z]+-[0-9]{3}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
