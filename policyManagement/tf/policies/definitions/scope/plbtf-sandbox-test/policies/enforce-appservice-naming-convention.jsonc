{
  // Azure Policy Definition: Enforce App Service Naming Convention
  // Purpose: Standardize naming for App Services and Function Apps
  // Pattern: plb-app-<environment>-<application>-<region>-<sequence>

  "name": "enforce-appservice-naming-convention",

  "properties": {
    "displayName": "Enforce App Service Naming Convention",
    "description": "This policy enforces standardized naming for Azure App Services including environment, application name, region, and sequence identifiers.",

    "mode": "All",

    "metadata": {
      "category": "Naming Convention",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Deny", "Audit", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target App Service web apps
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            // Exclude function apps (they have separate policy)
            "field": "kind",
            "notContains": "functionapp"
          },
          {
            // Validate naming pattern
            "not": {
              "field": "name",
              "match": "^plb-app-(dev|test|prod)-[a-z0-9]+-[a-z]+-[0-9]{3}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
