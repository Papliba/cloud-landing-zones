{
  "name": "block-classic-resources",

  "properties": {
    "displayName": "Block Classic Azure Resources (ASM)",
    "description": "This policy prevents deployment of classic Azure Service Management (ASM) resources, enforcing use of Azure Resource Manager (ARM) only.",

    "mode": "All",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "type",
            "equals": "Microsoft.ClassicCompute/virtualMachines"
          },
          {
            "field": "type",
            "equals": "Microsoft.ClassicStorage/storageAccounts"
          },
          {
            "field": "type",
            "equals": "Microsoft.ClassicNetwork/virtualNetworks"
          },
          {
            "field": "type",
            "like": "Microsoft.Classic*"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
