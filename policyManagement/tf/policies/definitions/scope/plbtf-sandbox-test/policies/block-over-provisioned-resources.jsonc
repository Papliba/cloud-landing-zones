{
  // Azure Policy Definition: Block Over-Provisioned Resources
  // Purpose: Prevent deployment of resources with excessive capacity
  // This helps right-size resources and avoid unnecessary costs

  "name": "block-over-provisioned-resources",

  "properties": {
    "displayName": "Block Over-Provisioned Resources",
    "description": "This policy audits resources that appear to be over-provisioned based on tags or configuration, helping optimize resource sizing and reduce costs.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target compute resources
            "field": "type",
            "in": ["Microsoft.Compute/virtualMachines", "Microsoft.Sql/servers/databases"]
          },
          {
            // Check for over-provisioned tag from monitoring
            "field": "tags['over-provisioned']",
            "equals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
