{
  
  
  

  "name": "require-managed-identities",

  "properties": {
    "displayName": "Require Managed Identities for App Services",
    "description": "This policy requires that App Services and Function Apps use managed identities for authentication instead of connection strings, improving security posture.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            
            "field": "identity.type",
            "notIn": ["SystemAssigned", "UserAssigned", "SystemAssigned, UserAssigned"]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
