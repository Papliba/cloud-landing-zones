{
  "name": "require-waf-on-app-gateways",

  "properties": {
    "displayName": "Require WAF on Application Gateways",
    "description": "This policy requires that all Application Gateways have Web Application Firewall (WAF) enabled to protect against common web exploits.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/applicationGateways"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Network/applicationGateways/sku.tier",
                "notIn": ["WAF", "WAF_v2"]
              },
              {
                "field": "Microsoft.Network/applicationGateways/webApplicationFirewallConfiguration.enabled",
                "notEquals": true
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
