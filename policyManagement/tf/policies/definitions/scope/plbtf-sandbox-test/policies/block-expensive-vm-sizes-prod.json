{
  "name": "block-expensive-vm-sizes-prod",

  "properties": {
    "displayName": "Block Certain VM Sizes in Production Environments",
    "description": "This policy prevents deployment of specific VM sizes in production to control costs and enforce sizing standards.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "blockedSizes": {
        "type": "Array",
        "metadata": {
          "displayName": "Blocked VM Sizes",
          "description": "List of VM sizes that are not allowed in production"
        },
        "defaultValue": ["Standard_B1s", "Standard_B1ms", "Standard_A0", "Standard_A1"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/sku.name",
            "in": "[parameters('blockedSizes')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
