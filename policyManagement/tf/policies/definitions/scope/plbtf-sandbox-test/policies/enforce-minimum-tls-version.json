{
  "name": "enforce-minimum-tls-version",

  "properties": {
    "displayName": "Enforce Minimum TLS Version 1.2",
    "description": "This policy enforces TLS 1.2 or higher for all resources that support TLS configuration, ensuring secure encrypted communications.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "minimumTlsVersion": {
        "type": "String",
        "metadata": {
          "displayName": "Minimum TLS Version",
          "description": "The minimum TLS version required"
        },
        "allowedValues": ["TLS1_2", "TLS1_3"],
        "defaultValue": "TLS1_2"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/minimumTlsVersion",
            "notEquals": "[parameters('minimumTlsVersion')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
