{
  // Azure Policy Definition: Require Expiry Date for Temporary Resources
  // Purpose: Ensure temporary resources have cleanup dates to prevent resource sprawl
  // This helps automate cleanup and reduce unnecessary costs

  "name": "require-expiry-date-temp-resources",

  "properties": {
    "displayName": "Require Expiry Date Tag for Temporary Resources",
    "description": "This policy requires that resources tagged as temporary have an expiry-date tag in ISO 8601 format, enabling automated cleanup and cost control.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Resource is marked as temporary
            "field": "tags['temporary']",
            "equals": "true"
          },
          {
            // No valid expiry date
            "anyOf": [
              {
                "field": "tags['expiry-date']",
                "exists": false
              },
              {
                "not": {
                  "field": "tags['expiry-date']",
                  "match": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                }
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
