{
  
  
  
  

  "name": "enforce-vm-naming-by-purpose",

  "properties": {
    "displayName": "Enforce Virtual Machine Naming by Purpose and Location",
    "description": "This policy enforces VM naming standards that include environment, workload purpose, Azure region code, and sequence number for easy identification and management.",

    "mode": "All",

    "metadata": {
      "category": "Naming Convention",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Deny", "Audit", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            
            "not": {
              "field": "name",
              "match": "^plb-vm-(dev|test|prod)-[a-z0-9]+-[a-z]+-[0-9]{3}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
