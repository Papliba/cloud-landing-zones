{
  "name": "require-backup-required-tag",

  "properties": {
    "displayName": "Require Backup Required Tag on Data Resources",
    "description": "This policy requires that data-bearing resources have a backup-required tag (true/false) to indicate backup policy applicability.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      },
      "resourceTypes": {
        "type": "Array",
        "metadata": {
          "displayName": "Resource Types",
          "description": "Resource types that require backup-required tag"
        },
        "defaultValue": ["Microsoft.Compute/virtualMachines", "Microsoft.Sql/servers/databases", "Microsoft.Storage/storageAccounts"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "in": "[parameters('resourceTypes')]"
          },
          {
            "anyOf": [
              {
                "field": "tags['backup-required']",
                "exists": false
              },
              {
                "field": "tags['backup-required']",
                "notIn": ["true", "false"]
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
