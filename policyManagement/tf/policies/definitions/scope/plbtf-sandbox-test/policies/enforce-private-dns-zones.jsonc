{
  // Azure Policy Definition: Enforce Private DNS Zones
  // Purpose: Require private DNS zones for private endpoint name resolution
  // This ensures proper DNS resolution for privately accessed Azure services

  "name": "enforce-private-dns-zones",

  "properties": {
    "displayName": "Enforce Private DNS Zones for Private Endpoints",
    "description": "This policy requires that private DNS zones are configured for private endpoints, ensuring proper name resolution for privately accessed Azure services.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target private endpoints
            "field": "type",
            "equals": "Microsoft.Network/privateEndpoints"
          },
          {
            // Check if private DNS zone group is configured
            "field": "tags['private-dns-configured']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
