{
  // Azure Policy Definition: Enforce Metric Alerts for Critical Resources
  // Purpose: Ensure critical resources have monitoring alerts configured
  // This enables proactive incident detection and response

  "name": "enforce-metric-alerts-critical-resources",

  "properties": {
    "displayName": "Enforce Metric Alerts for Critical Resources",
    "description": "This policy requires that resources tagged as critical have metric alerts configured for proactive monitoring and incident detection.",

    "mode": "Indexed",

    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target critical resources
            "field": "tags['criticality']",
            "in": ["high", "critical"]
          },
          {
            // No alerts configured tag
            "field": "tags['metric-alerts-configured']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
