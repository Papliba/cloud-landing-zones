{
  // Azure Policy Definition: Block RDP/SSH from Internet
  // Purpose: Prevent direct RDP (3389) and SSH (22) access from the internet
  // This is a critical security control to prevent brute force attacks

  "name": "block-rdp-ssh-from-internet",

  "properties": {
    "displayName": "Block RDP and SSH Access from Internet",
    "description": "This policy denies NSG rules that allow RDP (port 3389) or SSH (port 22) access from the internet, preventing unauthorized remote access attempts.",

    "mode": "All",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target NSG security rules
            "field": "type",
            "equals": "Microsoft.Network/networkSecurityGroups/securityRules"
          },
          {
            // Inbound traffic
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/direction",
            "equals": "Inbound"
          },
          {
            // Allow action
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/access",
            "equals": "Allow"
          },
          {
            // Source is internet (any, *, 0.0.0.0/0, internet)
            "anyOf": [
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/sourceAddressPrefix",
                "in": ["*", "Internet", "0.0.0.0/0"]
              },
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/sourceAddressPrefixes[*]",
                "in": ["*", "Internet", "0.0.0.0/0"]
              }
            ]
          },
          {
            // Destination port is RDP or SSH
            "anyOf": [
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRange",
                "in": ["22", "3389", "22-22", "3389-3389"]
              },
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRanges[*]",
                "in": ["22", "3389", "22-22", "3389-3389"]
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
