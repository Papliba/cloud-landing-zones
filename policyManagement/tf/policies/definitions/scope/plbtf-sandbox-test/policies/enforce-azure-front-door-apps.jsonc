{
  // Azure Policy Definition: Enforce Azure Front Door for Applications
  // Purpose: Require global load balancing and CDN for public-facing apps
  // This improves performance, availability, and security

  "name": "enforce-azure-front-door-apps",

  "properties": {
    "displayName": "Audit Public Applications for Azure Front Door",
    "description": "This policy audits public-facing web applications to ensure they use Azure Front Door for global load balancing, CDN, and enhanced security.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target web apps
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            // Production environment
            "field": "tags['environment']",
            "equals": "prod"
          },
          {
            // Public-facing application
            "field": "tags['public-facing']",
            "equals": "true"
          },
          {
            // No Front Door configured
            "field": "tags['front-door-enabled']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
