{
  // Azure Policy Definition: Enforce Disk Encryption on Virtual Machines
  // Purpose: Ensure all VM disks are encrypted using Azure Disk Encryption
  // This protects data at rest and meets compliance requirements

  "name": "enforce-disk-encryption-vms",

  "properties": {
    "displayName": "Enforce Disk Encryption on Virtual Machines",
    "description": "This policy requires that all virtual machines have disk encryption enabled using Azure Disk Encryption (ADE) to protect data at rest.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target virtual machines
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          // Check for disk encryption extension
          "type": "Microsoft.Compute/virtualMachines/extensions",
          "existenceCondition": {
            "anyOf": [
              {
                "field": "Microsoft.Compute/virtualMachines/extensions/type",
                "equals": "AzureDiskEncryption"
              },
              {
                "field": "Microsoft.Compute/virtualMachines/extensions/type",
                "equals": "AzureDiskEncryptionForLinux"
              }
            ]
          }
        }
      }
    }
  }
}
