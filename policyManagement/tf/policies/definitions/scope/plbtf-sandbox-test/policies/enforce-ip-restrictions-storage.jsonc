{
  // Azure Policy Definition: Enforce IP Restrictions on Storage Accounts
  // Purpose: Limit storage account access to specific IP ranges or VNets
  // This implements network-level access controls for storage resources

  "name": "enforce-ip-restrictions-storage",

  "properties": {
    "displayName": "Enforce IP Restrictions on Storage Accounts",
    "description": "This policy requires that storage accounts have network rules configured to restrict access to specific IP addresses or virtual networks only.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target storage accounts
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            // Check if default network action is Allow (unrestricted)
            "field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
            "equals": "Allow"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
