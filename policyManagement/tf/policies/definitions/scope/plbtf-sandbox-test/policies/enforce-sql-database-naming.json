{
  "name": "enforce-sql-database-naming",

  "properties": {
    "displayName": "Enforce SQL Database Naming Pattern",
    "description": "This policy enforces naming conventions for Azure SQL Databases with organization prefix and environment identifiers.",

    "mode": "All",

    "metadata": {
      "category": "Naming Convention",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Deny", "Audit", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Sql/servers/databases"
          },
          {
            "not": {
              "field": "name",
              "match": "^plb-sqldb-(dev|test|prod)-[a-z0-9]+-[0-9]{3}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
