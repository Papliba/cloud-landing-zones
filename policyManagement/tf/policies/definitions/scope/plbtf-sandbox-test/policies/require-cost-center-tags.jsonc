{
  // Azure Policy Definition: Require Cost Center Tags
  // Purpose: Enable accurate cost allocation and chargeback
  // This is essential for financial management and accountability

  "name": "require-cost-center-tags",

  "properties": {
    "displayName": "Require Cost Center Tag on All Resources",
    "description": "This policy requires that all resources have a cost center tag for accurate cost allocation, chargeback, and financial reporting.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Exclude resource groups and subscriptions
            "field": "type",
            "notIn": ["Microsoft.Resources/subscriptions", "Microsoft.Resources/resourceGroups"]
          },
          {
            // Cost center tag is missing or empty
            "anyOf": [
              {
                "field": "tags['cost-center']",
                "exists": false
              },
              {
                "field": "tags['cost-center']",
                "equals": ""
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
