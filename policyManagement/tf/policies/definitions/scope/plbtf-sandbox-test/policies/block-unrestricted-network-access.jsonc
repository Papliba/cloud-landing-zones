{
  // Azure Policy Definition: Block Unrestricted Network Access
  // Purpose: Prevent NSG rules that allow unrestricted inbound access from any source
  // This is a fundamental security control to prevent unauthorized access

  "name": "block-unrestricted-network-access",

  "properties": {
    "displayName": "Block Unrestricted Inbound Network Access",
    "description": "This policy prevents creation of NSG rules that allow inbound traffic from any source (*) on any port, enforcing principle of least privilege.",

    "mode": "All",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target NSG security rules
            "field": "type",
            "equals": "Microsoft.Network/networkSecurityGroups/securityRules"
          },
          {
            // Inbound direction
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/direction",
            "equals": "Inbound"
          },
          {
            // Allow access
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/access",
            "equals": "Allow"
          },
          {
            // Source is any/internet
            "anyOf": [
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/sourceAddressPrefix",
                "in": ["*", "Internet"]
              },
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/sourceAddressPrefixes[*]",
                "in": ["*", "Internet"]
              }
            ]
          },
          {
            // Destination port is any
            "anyOf": [
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRange",
                "equals": "*"
              },
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRanges[*]",
                "equals": "*"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
