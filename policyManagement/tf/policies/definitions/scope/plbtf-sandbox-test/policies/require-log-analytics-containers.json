{
  "name": "require-log-analytics-containers",

  "properties": {
    "displayName": "Require Log Analytics for Container Workloads",
    "description": "This policy requires that AKS clusters and container instances have Log Analytics integration enabled for centralized logging and monitoring.",

    "mode": "Indexed",

    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "type",
            "equals": "Microsoft.ContainerService/managedClusters"
          },
          {
            "field": "type",
            "equals": "Microsoft.ContainerInstance/containerGroups"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Insights/diagnosticSettings",
          "existenceCondition": {
            "field": "Microsoft.Insights/diagnosticSettings/workspaceId",
            "exists": true
          }
        }
      }
    }
  }
}
