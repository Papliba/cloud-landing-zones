{
  
  
  

  "name": "block-anonymous-container-access",

  "properties": {
    "displayName": "Block Anonymous Access to Blob Containers",
    "description": "This policy prevents blob containers from being configured with anonymous public access, protecting against accidental data exposure.",

    "mode": "All",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts/blobServices/containers"
          },
          {
            
            "field": "Microsoft.Storage/storageAccounts/blobServices/containers/publicAccess",
            "notEquals": "None"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
