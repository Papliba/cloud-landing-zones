{
  
  
  

  "name": "require-environment-tag",

  "properties": {
    "displayName": "Require Environment Tag on All Resources",
    "description": "This policy requires that all resources have an environment tag (dev/test/prod), enabling environment-based management, cost tracking, and policy enforcement.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      },
      "allowedEnvironments": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Environments",
          "description": "List of valid environment values"
        },
        "defaultValue": ["dev", "test", "prod", "sandbox", "shared"]
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            
            "field": "tags['environment']",
            "exists": false
          },
          {
            
            "field": "tags['environment']",
            "equals": ""
          },
          {
            
            "field": "tags['environment']",
            "notIn": "[parameters('allowedEnvironments')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
