{
  
  
  

  "name": "enforce-nsg-flow-logs-retention",

  "properties": {
    "displayName": "Enforce NSG Flow Logs Retention Period",
    "description": "This policy requires that NSG flow logs are retained for a minimum period (default 90 days) for security analysis and compliance auditing.",

    "mode": "All",

    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      },
      "minimumRetentionDays": {
        "type": "Integer",
        "metadata": {
          "displayName": "Minimum Retention Days",
          "description": "Minimum number of days to retain NSG flow logs"
        },
        "defaultValue": 90
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            
            "field": "type",
            "equals": "Microsoft.Network/networkWatchers/flowLogs"
          },
          {
            
            "anyOf": [
              {
                "field": "Microsoft.Network/networkWatchers/flowLogs/retentionPolicy.enabled",
                "notEquals": true
              },
              {
                "field": "Microsoft.Network/networkWatchers/flowLogs/retentionPolicy.days",
                "less": "[parameters('minimumRetentionDays')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
