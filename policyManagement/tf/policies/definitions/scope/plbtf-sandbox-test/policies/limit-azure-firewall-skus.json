{
  "name": "limit-azure-firewall-skus",

  "properties": {
    "displayName": "Limit Azure Firewall SKUs by Environment",
    "description": "This policy restricts Azure Firewall SKU selection based on environment, ensuring cost-appropriate configurations.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "nonprodAllowedSkus": {
        "type": "Array",
        "metadata": {
          "displayName": "Non-Prod Allowed SKUs",
          "description": "Firewall SKUs allowed in non-production"
        },
        "defaultValue": ["Basic"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/azureFirewalls"
          },
          {
            "field": "tags['environment']",
            "in": ["dev", "test"]
          },
          {
            "field": "Microsoft.Network/azureFirewalls/sku.tier",
            "notIn": "[parameters('nonprodAllowedSkus')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
