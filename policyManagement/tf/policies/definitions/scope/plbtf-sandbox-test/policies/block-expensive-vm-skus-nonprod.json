{
  "name": "block-expensive-vm-skus-nonprod",

  "properties": {
    "displayName": "Block Expensive VM SKUs in Non-Production Environments",
    "description": "This policy prevents deployment of expensive VM SKUs in non-production environments to control costs while allowing flexibility in production.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "blockedSkus": {
        "type": "Array",
        "metadata": {
          "displayName": "Blocked VM SKUs",
          "description": "List of expensive VM SKUs not allowed in non-prod"
        },
        "defaultValue": ["Standard_E64s_v3", "Standard_E64_v3", "Standard_M128s", "Standard_M128ms", "Standard_GS5"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "tags['environment']",
            "notEquals": "prod"
          },
          {
            "field": "Microsoft.Compute/virtualMachines/sku.name",
            "in": "[parameters('blockedSkus')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
