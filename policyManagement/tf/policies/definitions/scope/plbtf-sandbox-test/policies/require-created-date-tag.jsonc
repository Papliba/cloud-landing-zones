{
  // Azure Policy Definition: Require Created Date Tag
  // Purpose: Track resource creation dates for lifecycle management
  // This helps identify old resources and enforce retention policies

  "name": "require-created-date-tag",

  "properties": {
    "displayName": "Require Created Date Tag on All Resources",
    "description": "This policy requires that all resources have a created-date tag in ISO 8601 format (YYYY-MM-DD) for lifecycle management and age tracking.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            // Tag doesn't exist
            "field": "tags['created-date']",
            "exists": false
          },
          {
            // Tag is empty
            "field": "tags['created-date']",
            "equals": ""
          },
          {
            // Tag doesn't match ISO 8601 date format (YYYY-MM-DD)
            "not": {
              "field": "tags['created-date']",
              "match": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
