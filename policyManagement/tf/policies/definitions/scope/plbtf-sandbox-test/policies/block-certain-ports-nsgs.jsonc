{
  // Azure Policy Definition: Block Certain Ports on NSGs
  // Purpose: Prevent exposure of high-risk ports commonly targeted by attackers
  // This includes ports for management protocols, databases, and legacy services

  "name": "block-certain-ports-nsgs",

  "properties": {
    "displayName": "Block High-Risk Ports in NSG Rules",
    "description": "This policy prevents NSG rules from allowing access to high-risk ports commonly targeted by attackers, including Telnet, FTP, SMB, and others.",

    "mode": "All",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "blockedPorts": {
        "type": "Array",
        "metadata": {
          "displayName": "Blocked Ports",
          "description": "List of ports that should not be exposed"
        },
        "defaultValue": ["23", "21", "445", "139", "135", "1433", "3306", "5432", "27017"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target NSG rules
            "field": "type",
            "equals": "Microsoft.Network/networkSecurityGroups/securityRules"
          },
          {
            // Inbound direction
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/direction",
            "equals": "Inbound"
          },
          {
            // Allow action
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/access",
            "equals": "Allow"
          },
          {
            // From internet
            "field": "Microsoft.Network/networkSecurityGroups/securityRules/sourceAddressPrefix",
            "in": ["*", "Internet", "0.0.0.0/0"]
          },
          {
            // Blocked ports
            "anyOf": [
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRange",
                "in": "[parameters('blockedPorts')]"
              },
              {
                "field": "Microsoft.Network/networkSecurityGroups/securityRules/destinationPortRanges[*]",
                "in": "[parameters('blockedPorts')]"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
