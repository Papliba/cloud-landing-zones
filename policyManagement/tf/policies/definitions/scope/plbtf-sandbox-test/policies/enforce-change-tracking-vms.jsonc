{
  // Azure Policy Definition: Enforce Change Tracking on VMs
  // Purpose: Monitor configuration changes on virtual machines for security and compliance
  // This helps detect unauthorized modifications and configuration drift

  "name": "enforce-change-tracking-vms",

  "properties": {
    "displayName": "Enforce Change Tracking on Virtual Machines",
    "description": "This policy requires that production virtual machines have change tracking enabled to monitor configuration changes, file modifications, and software installations.",

    "mode": "Indexed",

    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target virtual machines
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            // Production environment
            "field": "tags['environment']",
            "equals": "prod"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          // Check for change tracking solution
          "type": "Microsoft.OperationsManagement/solutions",
          "existenceCondition": {
            "field": "name",
            "contains": "ChangeTracking"
          }
        }
      }
    }
  }
}
