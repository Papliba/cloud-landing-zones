{
  // Azure Policy Definition: Block Default Route to Internet
  // Purpose: Prevent direct internet routing bypassing security controls
  // All internet traffic should go through Azure Firewall or NVA

  "name": "block-default-route-internet",

  "properties": {
    "displayName": "Block Default Route to Internet in Route Tables",
    "description": "This policy prevents creation of route table rules that send default traffic (0.0.0.0/0) directly to the internet, enforcing routing through security appliances.",

    "mode": "All",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target route table routes
            "field": "type",
            "equals": "Microsoft.Network/routeTables/routes"
          },
          {
            // Default route (0.0.0.0/0)
            "field": "Microsoft.Network/routeTables/routes/addressPrefix",
            "equals": "0.0.0.0/0"
          },
          {
            // Next hop is Internet
            "field": "Microsoft.Network/routeTables/routes/nextHopType",
            "equals": "Internet"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
