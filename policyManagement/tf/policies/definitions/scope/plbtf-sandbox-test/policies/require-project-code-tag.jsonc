{
  // Azure Policy Definition: Require Project Code Tag
  // Purpose: Track resources by project for cost allocation and management
  // This enables project-level reporting and budgeting

  "name": "require-project-code-tag",

  "properties": {
    "displayName": "Require Project Code Tag on All Resources",
    "description": "This policy requires that all resources have a project-code tag following the format PRJ-XXXX for project-level tracking and cost allocation.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            // Tag doesn't exist
            "field": "tags['project-code']",
            "exists": false
          },
          {
            // Tag is empty
            "field": "tags['project-code']",
            "equals": ""
          },
          {
            // Tag doesn't match format PRJ-XXXX
            "not": {
              "field": "tags['project-code']",
              "match": "^PRJ-[0-9]{4}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
