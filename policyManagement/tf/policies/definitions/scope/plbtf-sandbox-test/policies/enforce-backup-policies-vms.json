{
  "name": "enforce-backup-policies-vms",

  "properties": {
    "displayName": "Enforce Backup Policies on Virtual Machines",
    "description": "This policy ensures that all production virtual machines are protected by Azure Backup with appropriate backup policies configured.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      },
      "excludedEnvironments": {
        "type": "Array",
        "metadata": {
          "displayName": "Excluded Environments",
          "description": "Environments where backup is not required"
        },
        "defaultValue": ["dev", "test"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            "field": "tags['environment']",
            "notIn": "[parameters('excludedEnvironments')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.RecoveryServices/backupprotecteditems"
        }
      }
    }
  }
}
