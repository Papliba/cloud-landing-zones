{
  "name": "require-business-unit-tag",

  "properties": {
    "displayName": "Require Business Unit Tag on All Resources",
    "description": "This policy requires that all resources have a business-unit tag for organizational tracking and cost allocation by department.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "tags['business-unit']",
            "exists": false
          },
          {
            "field": "tags['business-unit']",
            "equals": ""
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
