{
  // Azure Policy Definition: Require Change Request ID Tag
  // Purpose: Track resources to change management requests for audit trail
  // This enables compliance with ITIL change management processes

  "name": "require-change-request-id-tag",

  "properties": {
    "displayName": "Require Change Request ID Tag for Production Resources",
    "description": "This policy requires that production resources have a change-request-id tag linking them to an approved change request for audit and compliance.",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Production environment only
            "field": "tags['environment']",
            "equals": "prod"
          },
          {
            // No valid change request ID
            "anyOf": [
              {
                "field": "tags['change-request-id']",
                "exists": false
              },
              {
                "field": "tags['change-request-id']",
                "equals": ""
              },
              {
                // Format: CHG-XXXXXXX
                "not": {
                  "field": "tags['change-request-id']",
                  "match": "^CHG-[0-9]{7}$"
                }
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
