{
  // Azure Policy Definition: Require Compliance Scope Tag
  // Purpose: Identify resources subject to regulatory compliance requirements
  // This enables targeted compliance monitoring and reporting

  "name": "require-compliance-scope-tag",

  "properties": {
    "displayName": "Require Compliance Scope Tag for Regulated Resources",
    "description": "This policy requires that resources handling regulated data have a compliance-scope tag identifying applicable regulations (GDPR, HIPAA, PCI-DSS, etc.).",

    "mode": "Indexed",

    "metadata": {
      "category": "Tagging",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      },
      "allowedScopes": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Compliance Scopes",
          "description": "List of valid compliance scope values"
        },
        "defaultValue": ["none", "gdpr", "hipaa", "pci-dss", "sox", "iso27001"]
      }
    },

    "policyRule": {
      "if": {
        "anyOf": [
          {
            // Tag doesn't exist
            "field": "tags['compliance-scope']",
            "exists": false
          },
          {
            // Tag has invalid value
            "field": "tags['compliance-scope']",
            "notIn": "[parameters('allowedScopes')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
