{
  // Azure Policy Definition: Require Scale-Down Schedules
  // Purpose: Ensure auto-scaling resources have scale-down rules configured
  // This prevents resources from staying scaled up unnecessarily

  "name": "require-scale-down-schedules",

  "properties": {
    "displayName": "Require Scale-Down Schedules for Auto-Scaling Resources",
    "description": "This policy audits auto-scaling resources to ensure they have scale-down rules configured, preventing unnecessarily high capacity and costs.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target App Service Plans with auto-scale
            "field": "type",
            "equals": "Microsoft.Web/serverfarms"
          },
          {
            // Not in consumption tier
            "field": "Microsoft.Web/serverfarms/sku.tier",
            "notEquals": "Dynamic"
          },
          {
            // Check for scale-down schedule tag
            "field": "tags['scale-schedule-configured']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
