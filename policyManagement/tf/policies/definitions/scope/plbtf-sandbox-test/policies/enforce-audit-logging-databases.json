{
  
  
  

  "name": "enforce-audit-logging-databases",

  "properties": {
    "displayName": "Enforce Audit Logging on All Databases",
    "description": "This policy requires that all SQL databases and other database services have audit logging enabled to track data access and modifications for security and compliance.",

    "mode": "Indexed",

    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "Microsoft.Sql/servers/databases",
          "Microsoft.DBforMySQL/servers",
          "Microsoft.DBforPostgreSQL/servers"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          
          "type": "Microsoft.Sql/servers/databases/auditingSettings",
          "existenceCondition": {
            "field": "Microsoft.Sql/servers/databases/auditingSettings/state",
            "equals": "Enabled"
          }
        }
      }
    }
  }
}
