{
  // Azure Policy Definition: Require Forced Tunneling for VPN
  // Purpose: Ensure all internet-bound traffic from VPN goes through on-premises security controls
  // This maintains consistent security posture for hybrid connectivity

  "name": "require-forced-tunneling-vpn",

  "properties": {
    "displayName": "Require Forced Tunneling for VPN Connections",
    "description": "This policy requires that VPN gateway connections use forced tunneling, routing all internet-bound traffic through on-premises security controls.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target VPN gateways
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworkGateways"
          },
          {
            // VPN type (not ExpressRoute)
            "field": "Microsoft.Network/virtualNetworkGateways/gatewayType",
            "equals": "Vpn"
          },
          {
            // Check for forced tunneling tag (simplified check)
            "field": "tags['forced-tunneling-enabled']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
