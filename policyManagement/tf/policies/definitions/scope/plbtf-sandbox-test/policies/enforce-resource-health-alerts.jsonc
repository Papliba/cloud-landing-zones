{
  // Azure Policy Definition: Enforce Resource Health Alerts
  // Purpose: Monitor Azure platform health events affecting resources
  // This enables proactive response to Azure service issues

  "name": "enforce-resource-health-alerts",

  "properties": {
    "displayName": "Enforce Resource Health Alerts for Critical Resources",
    "description": "This policy audits critical resources to ensure they have resource health alerts configured for Azure platform events and service issues.",

    "mode": "Indexed",

    "metadata": {
      "category": "Monitoring",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target critical resources
            "field": "type",
            "in": [
              "Microsoft.Compute/virtualMachines",
              "Microsoft.Sql/servers/databases",
              "Microsoft.Storage/storageAccounts"
            ]
          },
          {
            // Production environment
            "field": "tags['environment']",
            "equals": "prod"
          },
          {
            // High or critical criticality
            "field": "tags['criticality']",
            "in": ["high", "critical"]
          },
          {
            // No resource health alerts configured
            "field": "tags['resource-health-alerts-configured']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
