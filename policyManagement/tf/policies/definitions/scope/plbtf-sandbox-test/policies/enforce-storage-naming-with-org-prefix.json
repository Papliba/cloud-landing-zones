{
  "name": "enforce-storage-naming-with-org-prefix",

  "properties": {
    "displayName": "Enforce Storage Account Naming with Organization Prefix",
    "description": "This policy enforces that all storage accounts start with the organization prefix 'plbst' followed by environment and purpose identifiers.",

    "mode": "All",

    "metadata": {
      "category": "Naming Convention",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Deny", "Audit", "Disabled"],
        "defaultValue": "Deny"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "not": {
              "field": "name",
              "match": "^plbst(dev|tst|prd)[a-z0-9]{3,18}$"
            }
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
