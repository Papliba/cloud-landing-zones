{
  "name": "limit-disk-iops-by-environment",

  "properties": {
    "displayName": "Limit Disk IOPS by Environment",
    "description": "This policy restricts high IOPS disk types in non-production environments to control costs while ensuring production performance.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Deny"
      },
      "blockedDiskTypes": {
        "type": "Array",
        "metadata": {
          "displayName": "Blocked Disk Types for Non-Prod",
          "description": "High IOPS disk types not allowed in non-production"
        },
        "defaultValue": ["Premium_LRS", "UltraSSD_LRS"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Compute/disks"
          },
          {
            "field": "tags['environment']",
            "in": ["dev", "test"]
          },
          {
            "field": "Microsoft.Compute/disks/sku.name",
            "in": "[parameters('blockedDiskTypes')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
