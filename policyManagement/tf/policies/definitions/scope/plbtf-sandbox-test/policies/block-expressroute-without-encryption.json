{
  "name": "block-expressroute-without-encryption",

  "properties": {
    "displayName": "Block ExpressRoute Without Encryption",
    "description": "This policy requires that ExpressRoute circuits have MACsec or IPsec encryption enabled for data in transit protection.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/expressRouteCircuits"
          },
          {
            "field": "tags['encryption-enabled']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
