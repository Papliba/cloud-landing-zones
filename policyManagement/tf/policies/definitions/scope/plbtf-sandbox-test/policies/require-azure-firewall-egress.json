{
  "name": "require-azure-firewall-egress",

  "properties": {
    "displayName": "Require Azure Firewall for Egress Traffic",
    "description": "This policy audits virtual networks to ensure egress traffic is routed through Azure Firewall for centralized security controls.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            "field": "tags['environment']",
            "equals": "prod"
          },
          {
            "field": "tags['firewall-egress-configured']",
            "notEquals": "true"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
