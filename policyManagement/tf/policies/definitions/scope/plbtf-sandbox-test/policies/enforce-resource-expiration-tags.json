{
  "name": "enforce-resource-expiration-tags",

  "properties": {
    "displayName": "Enforce Resource Expiration Tags for Temporary Resources",
    "description": "This policy requires that temporary resources have an expiration date tag, enabling automated cleanup and cost control.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      },
      "resourceTypes": {
        "type": "Array",
        "metadata": {
          "displayName": "Resource Types",
          "description": "Resource types that require expiration tags"
        },
        "defaultValue": ["Microsoft.Compute/virtualMachines", "Microsoft.Storage/storageAccounts"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "in": "[parameters('resourceTypes')]"
          },
          {
            "field": "tags['temporary']",
            "equals": "true"
          },
          {
            "field": "tags['expiration-date']",
            "exists": false
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
