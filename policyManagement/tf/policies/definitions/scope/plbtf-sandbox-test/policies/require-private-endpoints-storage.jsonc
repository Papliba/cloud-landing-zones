{
  // Azure Policy Definition: Require Private Endpoints for Storage Accounts
  // Purpose: Enforce network security by requiring private endpoints for storage accounts
  // This prevents direct public internet access to storage resources

  "name": "require-private-endpoints-storage",

  "properties": {
    "displayName": "Require Private Endpoints for Storage Accounts",
    "description": "This policy ensures that all storage accounts use private endpoints for secure network connectivity, preventing direct internet exposure.",

    "mode": "Indexed",

    "metadata": {
      "category": "Security",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target storage accounts
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            // Check if private endpoint connections are not configured
            "count": {
              "field": "Microsoft.Storage/storageAccounts/privateEndpointConnections[*]",
              "where": {
                "field": "Microsoft.Storage/storageAccounts/privateEndpointConnections[*].privateLinkServiceConnectionState.status",
                "equals": "Approved"
              }
            },
            "less": 1
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
