{
  
  
  

  "name": "require-ddos-protection-vnets",

  "properties": {
    "displayName": "Require DDoS Protection on Production Virtual Networks",
    "description": "This policy requires that production virtual networks have Azure DDoS Protection Standard enabled to protect against distributed denial of service attacks.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["Audit", "Deny", "Disabled"],
        "defaultValue": "Audit"
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks"
          },
          {
            
            "field": "tags['environment']",
            "equals": "prod"
          },
          {
            
            "field": "Microsoft.Network/virtualNetworks/enableDdosProtection",
            "notEquals": true
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
