{
  // Azure Policy Definition: Enforce Auto-Shutdown on Dev/Test VMs
  // Purpose: Reduce costs by automatically shutting down development and test VMs
  // This prevents unnecessary compute costs outside business hours

  "name": "enforce-auto-shutdown-dev-vms",

  "properties": {
    "displayName": "Enforce Auto-Shutdown on Dev/Test Virtual Machines",
    "description": "This policy requires that all development and test VMs have auto-shutdown configured to reduce costs by stopping VMs outside business hours.",

    "mode": "Indexed",

    "metadata": {
      "category": "Cost Optimization",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      },
      "targetEnvironments": {
        "type": "Array",
        "metadata": {
          "displayName": "Target Environments",
          "description": "Environments where auto-shutdown is required"
        },
        "defaultValue": ["dev", "test", "sandbox"]
      }
    },

    "policyRule": {
      "if": {
        "allOf": [
          {
            // Target virtual machines
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          },
          {
            // Check environment tag
            "field": "tags['environment']",
            "in": "[parameters('targetEnvironments')]"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          // Check for auto-shutdown schedule
          "type": "Microsoft.DevTestLab/schedules",
          "existenceCondition": {
            "field": "Microsoft.DevTestLab/schedules/status",
            "equals": "Enabled"
          }
        }
      }
    }
  }
}
