{
  "name": "require-nsg-flow-logs",

  "properties": {
    "displayName": "Require NSG Flow Logs Enabled",
    "description": "This policy requires that all Network Security Groups have flow logs enabled for traffic analysis and security monitoring.",

    "mode": "Indexed",

    "metadata": {
      "category": "Networking",
      "version": "1.0.0"
    },

    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": ["AuditIfNotExists", "Disabled"],
        "defaultValue": "AuditIfNotExists"
      }
    },

    "policyRule": {
      "if": {
        "field": "type",
        "equals": "Microsoft.Network/networkSecurityGroups"
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Network/networkWatchers/flowLogs",
          "existenceCondition": {
            "field": "Microsoft.Network/networkWatchers/flowLogs/enabled",
            "equals": true
          }
        }
      }
    }
  }
}
