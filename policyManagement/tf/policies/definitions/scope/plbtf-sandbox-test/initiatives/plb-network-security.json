          "effect": {
            "value": "[parameters('effect')]"
          }
        }
      },
      {
        
        "policyDefinitionId": "/providers/Microsoft.Management/managementGroups/root-mg/providers/Microsoft.Authorization/policyDefinitions/block-rdp-ssh-from-internet",
